{
    "name": "doctor-preview-desktop",
    "version": "1.0.0",
    "description": "Desktop app for real-time surgery preview",
    "main": "electron/main.js",
    "scripts": {
        "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
        "start:react": "vite",
        "start:electron": "electron .",
        "build": "vite build",
        "build:mac": "npm run build && electron-builder --mac",
        "build:win": "npm run build && electron-builder --win"
    },
    "build": {
        "appId": "com.doctorpreview.app",
        "productName": "Doctor Preview",
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "mac": {
            "target": "dmg",
            "category": "public.app-category.medical"
        },
        "win": {
            "target": "nsis"
        }
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "concurrently": "^8.2.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.33",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.1",
        "vite": "^5.0.12",
        "wait-on": "^7.2.0"
    }
}